<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS}{GMT} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
		<Property name="SYSTEM_NAME">InterfaceTranslatorToGenericHTTP</Property>
		<Property name="CONSOLE_FILE_LEVEL">INFO</Property>
		<Property name="LOG_DIR">.</Property>
    </Properties>
	<Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
 			<ThresholdFilter level="${CONSOLE_FILE_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
		<RollingFile name="FileAppender" fileName="${LOG_DIR}/interface-translator-to-generic-http.log" filePattern="${LOG_DIR}/interface-translator-to-generic-http-%d{yyyy-MM-dd}-%i.log">
	    	<PatternLayout>
	        	<Pattern>${LOG_PATTERN}</Pattern>
	    	</PatternLayout>
	    	<Policies>
	        	<SizeBasedTriggeringPolicy size="100MB" />
	    	</Policies>
	    	<DefaultRolloverStrategy max="10" />
 			<ThresholdFilter level="${CONSOLE_FILE_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
		</RollingFile>
    </Appenders>
    <Loggers>
		<Root level="WARN">
            <AppenderRef ref="ConsoleAppender" /> <!-- comment out this one in production environment -->
            <AppenderRef ref="FileAppender" />
        </Root>
		<Logger name="ai.aitia.arrowhead" level="ALL" additivity="true" />
		<Logger name="eu.arrowhead" level="ALL" additivity="true" />
    </Loggers>
</Configuration>